  switch (atributoComp1) {
  case 1:
    resultadoComp1 = (Populacao1 > Populacao2) ? "Carta 1" : "Carta 2";
    atributocarta1 = Populacao1;
    atributocarta2 = Populacao2;
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
