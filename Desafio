    atributocarta1 = PIBCapita1;
    atributocarta2 = PIBCapita2;
    break;
  default:
    printf("Opção Inválida!");
    }

    //Comparação do segundo atributo:

  switch (atributoComp2) {
    if(atributoComp1 == atributoComp2) {
      printf("Você deve escolher atributos diferentes!\n");
    } else {
    
  case 1:
    resultadoComp2 = (Populacao1 > Populacao2) ? "Carta 1" : "Carta 2";
    prinft("Vencedora: %s\n", resultadoComp2);
    atributocarta1a = Populacao1;
    atributocarta2a = Populacao2;
