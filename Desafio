#include <stdio.h>

int main() {
  
    char Estado1[50], Estado2[50];
    char Codigo1[4], Codigo2[4];
    char Cidade1[50], Cidade2[50];
    int Populacao1, Populacao2;
    float Area1, Area2;
    float PIB1, PIB2;
    int Turismo1, Turismo2;
    float Densidade1 = (float) Populacao1 / Area1;
    float Densidade2 = (float) Populacao2 / Area2;
    float PIBCapita1 = (float) PIB1 / Populacao1;
    float PIBCapita2 = (float) PIB2 / Populacao2;
    int atributoComp;
    
  // Área para entrada de dados

    printf("Carta 1:\n");
    
    printf("Digite o Estado:", Estado1);
    scanf("%s", &Estado1);

    printf("Digite o Código da carta:", Codigo1);
    scanf("%s", &Codigo1);

    printf("Digite a Cidade:", Cidade1);
    scanf("%s", &Cidade1);

    printf("Digite a População:", Populacao1);
    scanf("%d", &Populacao1);

    printf("Digite a Área:", Area1);
    scanf("%f", &Area1);

    printf("Digite o PIB:", PIB1);
    scanf("%f", &PIB1);

    printf("Digite a quantidade de pontos turísticos:", Turismo1);
    scanf("%d", &Turismo1);
 
    printf("Carta 2:\n");

    printf("Digite o Estado:", Estado2);
    scanf("%s", &Estado2);

    printf("Digite o Código:", Codigo2);
    scanf("%s", &Codigo2);

    printf("Digite a Cidade:", Cidade2);
    scanf("%s", &Cidade2);

    printf("Digite a População:", Populacao2);
    scanf("%d", &Populacao2);

    printf("Digite a Área:", Area2);
    scanf("%f", &Area2);

    printf("Digite o PIB:", PIB2);
    scanf("%f", &PIB2);

    printf("Digite a quantidade de pontos turísticos:", Turismo2);
    scanf("%d", &Turismo2);
 
  // Área para exibição dos dados da cidade

    printf("Carta 1:\n");

    printf("Estado:%s\n", Estado1);

    printf("Código:%s\n", Codigo1);

    printf("Cidade:%s\n", Cidade1);

    printf("População:%d\n", Populacao1);

    printf("Área:%f km2\n", Area1);

    printf("PIB: R$ %f\n", PIB1);
    
    printf("Número de pontos turísticos:%d\n", Turismo1);

    printf("Densidade populacional:%f\n", Densidade1);

    printf("PIB per capita:%f\n\n", PIBCapita1);

    printf("Carta 2:\n");

    printf("Estado:%s\n", Estado2);

    printf("Código:%s\n", Codigo2);

    printf("Cidade:%s\n", Cidade2);

    printf("População:%d\n", Populacao2);

    printf("Área:%f km2\n", Area2);

    printf("PIB: R$ %f\n", PIB2);
    
    printf("Número de pontos turísticos:%d\n", Turismo2);

    printf("Densidade populacional:%f\n", Densidade2);

    printf("PIB per capita:%f\n\n", PIBCapita2);

    // Área de comparação de atributo.

    printf("Digite o número do atributo que deseja comparar:\n");
    printf("1. População\n");
    printf("2. Área\n");
    printf("3. PIB\n");
    printf("4. Número de pontos turísticos\n");
    printf("5. Densidade populacional\n");
    printf("6. PIB per capita\n");
    scanf("%d", &atributoComp);

    switch (atributoComp) {
  case 1:
    if (Populacao1 > Populacao2) {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: População carta 1 e População carta 2\n");
    printf("A População da carta 1 é %d e a População da carta 2 é %d\n", Populacao1, Populacao2);
    printf("A carta 1 venceu!");
    } else if (Populacao1 < Populacao2) {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: População carta 1 e População carta 2\n");
    printf("A População da carta 1 é %d e a População da carta 2 é %d\n", Populacao1, Populacao2);
    printf("A carta 2 venceu!");
    } else {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: População carta 1 e População carta 2\n");
    printf("A População da carta 1 é %d e a População da carta 2 é %d\n", Populacao1, Populacao2);
    printf("Empate!");
    } break;
  
  case 2:
    if (Area1 > Area2) {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: Área carta 1 e Área carta 2\n");
    printf("A Área da carta 1 é %d e a Área da carta 2 é %d\n", Area1, Area2);
    printf("A carta 1 venceu!");
    } else if (Area1 < Area2) {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: Área carta 1 e Área carta 2\n");
    printf("A Área da carta 1 é %d e a Área da carta é 2 %d\n", Area1, Area2);
    printf("A carta 2 venceu!");
    } else {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: Área carta 1 e Área carta 2\n");
    printf("A Área da carta 1 é %f e a Área da carta 2 é %f\n", Area1, Area2);
    printf("Empate!");
    } break;

  case 3:
    if (PIB1 > PIB2) {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: PIB carta 1 e PIB carta 2\n");
    printf("O PIB da carta 1 é %f e o PIB da certa 2 é %f\n", PIB1, PIB2);
    printf("A carta 1 venceu!");
    } else if (PIB1 < PIB2) {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: PIB carta 1 e PIB carta 2\n");
    printf("O PIB da carta 1 é %f e o PIB da carta 2 é %f\n", PIB1, PIB2);
    printf("A carta 2 venceu!");
    } else {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: PIB carta 1 e PIB carta 2\n");
    printf("O PIB da carta 1 é %f e o PIB da carta 2 é %f\n", PIB1, PIB2);
    printf("Empate!");
    } break;
  
  case 4:
    if (Turismo1 > Turismo2) {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: Turismo carta 1 e Turismo carta 2\n");
    printf("A quantidade de pontos turísticos da carta 1 é %d e a da carta 2 é %d\n", Turismo1, Turismo2);
    printf("A carta 1 venceu!");
    } else if (Turismo1 < Turismo2) {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: Turismo carta 1 e Turismo carta 2\n");
    printf("A quantidade de pontos turísticos da carta 1 é %d e a da carta 2 é %d\n", Turismo1, Turismo2);
    printf("A carta 2 venceu!");
    } else {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: Turismo carta 1 e Turismo carta 2\n");
    printf("A quantidade de pontos turísticos da carta 1 é %d e a da carta 2 é %d\n", Turismo1, Turismo2);
    printf("Empate!");
    } break;

  case 5:
    if (Densidade1 > Densidade2) {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: Densidade carta 1 e Densidade carta 2\n");
    printf("A Densidade da carta 1 é %f e a Densidade da carta 2 é %f\n", Densidade1, Densidade2);
    printf("A carta 1 venceu!");
    } else if (Densidade1 < Densidade2) {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: Densidade carta 1 e Densidade carta 2\n");
    printf("A Densidade da carta 1 é %f e a Densidade da carta 2 é %f\n", Densidade1, Densidade2);
    printf("A carta 2 venceu!");
    } else {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: Densidade carta 1 e Densidade carta 2\n");
    printf("A Densidade da carta 1 é %f e a Densidade da carta 2 é %f\n", Densidade1, Densidade2);
    printf("Empate!");
    } break;

  case 6:
    if (PIBCapita1 > PIBCapita2) {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: PIB per capita carta 1 e PIB per capita carta 2\n");
    printf("O PIB per capita da carta 1 é %f e o PIB per capita da carta 2 é %f\n", PIBCapita1, PIBCapita2);
    printf("A carta 1 venceu!");
    } else if (PIBCapita1 < PIBCapita2) {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: PIB per capita carta 1 e PIB per capita carta 2\n");
    printf("O PIB per capita da carta 1 é %f e o PIB per capita da carta 2 é %f\n", PIBCapita1, PIBCapita2);
    printf("A carta 2 venceu!");
    } else {
    printf("Os países digitados foram: %s e %s\n", Estado1, Estado2);
    printf("Atributo comparado: PIB per capita carta 1 e PIB per capita carta 2\n");
    printf("O PIB per capita da carta 1 é %f e o PIB per capita da carta 2 é %f\n", PIBCapita1, PIBCapita2);
    printf("Empate!");
    } break;

  default:
    printf("Opção Inválida!");
    }
    return 0;
    }
